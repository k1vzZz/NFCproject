<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".ui.userpin.UserPinFragment">

    <TextView
        style="@style/RegistrationText"
        android:id="@+id/textView"
        android:text="@string/enter_your_pin"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        style="@style/EmailEditText"
        android:id="@+id/editTextPin"
        android:inputType="numberPassword"
        android:autofillHints="Pin code"
        android:hint="Pin code"
        android:maxLength="4"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/phoneEditTitle"
        style="@style/RegTitle"
        android:text="Pin code"
        app:layout_constraintBottom_toTopOf="@+id/editTextPin"
        app:layout_constraintEnd_toEndOf="@+id/editTextPin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/editTextPin"
        app:layout_constraintTop_toTopOf="@+id/editTextPin"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>