<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/RegistrationText"
        android:id="@+id/textView"
        android:text="Tariff: 30 day"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        style="@style/SubmitButton"
        android:id="@+id/day_thirty"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/welcome_logo_grey_color"
        android:text="30 day 600rub"/>

    <Button
        style="@style/SubmitButton"
        android:id="@+id/day_seven"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/day_thirty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="15 day 300rub"/>

    <Button
        style="@style/SubmitButton"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/day_seven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="60 day 1200rub"/>



</androidx.constraintlayout.widget.ConstraintLayout>